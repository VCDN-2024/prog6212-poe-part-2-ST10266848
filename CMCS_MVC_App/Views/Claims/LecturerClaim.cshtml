@model IEnumerable<CMCS_MVC_App.Models.Claim>
@{
    ViewData["Title"] = "LecturerClaim";
}

<h2>Your Claims</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Submission Date</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Additional Note</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.SubmissionDate.ToShortDateString()</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.AdditionalNote</td>
                <td>@claim.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-info">View</a>
                    <a asp-action="Edit" asp-route-id="@claim.ClaimId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@claim.ClaimId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this claim?');">Delete</a>
                    @if (claim.Status == "Pending")
                    {
                        <a asp-action="ApproveClaim" asp-route-id="@claim.ClaimId" asp-route-status="Approved" class="btn btn-success">Approve</a>
                        <a asp-action="RejectClaim" asp-route-id="@claim.ClaimId" asp-route-status="Rejected" class="btn btn-secondary" onclick="return confirm('Are you sure you want to reject this claim');">Reject</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Submit Claim</a>